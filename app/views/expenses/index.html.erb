<title>Shared Todo App </title>

<div class="container">
  <div class="row">
    <div class="span6">
      <h1>My Expense Sheet</h1>
      <a href="/expenses/add_expense">add expense</a>
      <hr>
      <p>All your Expenses are here</p>
      <div class="well">
        <table>
          <thead class="well">
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Amount</th>
          </tr>
          <tbody>
          <% @expenses.each do |e| %>
              <tr>
                <td><%= e.created_at.to_date %></td>
                <td><%= e.name %></td>
                <td><%= e.amount %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <p>Total Expenses : <%= @expenses.sum(:amount) %></p>
      </div>
    </div>
  </div>
</div>
